<link rel ="stylesheet" type= "text/css" href = "css/new_activity.css">
<%= form_for (@event) do |f| %>



<% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited
        this event from being saved:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :text %>
    <%= f.text_area :text %>
  </div>

  <p>Day: <%= f.select :day_id, Day.all.map { |day| [ day.to_s, day.id ] } %></p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>